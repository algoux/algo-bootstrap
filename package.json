{
  "name": "algo-bootstrap",
  "version": "0.1.0",
  "description": "Bootstrap for algorithm beginners",
  "main": "./dist/main/main.js",
  "author": {
    "name": "bLue"
  },
  "private": true,
  "build": {
    "productName": "Algo Bootstrap",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "release"
    },
    "appId": "org.algoux.algo-bootstrap",
    "asar": false
  },
  "scripts": {
    "start": "npm run build:main-dev && electron ./dist/main/main.js",
    "start:renderer": "cross-env APP_ROOT=src/renderer umi dev",
    "start:main": "electron-webpack dev",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "debug:main": "run-electron --inspect=5858 -w ./dist/main/main.js",
    "build:renderer": "cross-env APP_ROOT=src/renderer umi build",
    "build:renderer-analyze": "cross-env ANALYZE=1 APP_ROOT=src/renderer umi build",
    "build:main-dev": "NODE_ENV=development webpack --config ./build/webpack.main.config.js",
    "build:main-prod": "NODE_ENV=production webpack --config ./build/webpack.main.prod.config.js",
    "build": "npm run build:renderer && npm run build:main-prod",
    "pack:dir": "electron-builder --dir",
    "pack:mac": "electron-builder --mac",
    "pack:win": "electron-builder --win",
    "dist": "electron-builder",
    "prettier": "prettier --list-different \"./**/*.{ts,tsx,js,jsx,less}\""
  },
  "keywords": [
    "algorithm",
    "bootstrap",
    "algoux"
  ],
  "dependencies": {
    "axios": "^0.19.0",
    "electron-better-ipc": "^0.6.0",
    "electron-log": "^3.0.8",
    "moment": "^2.24.0",
    "url-assembler": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/react-redux": "^5.0.21",
    "@types/redux-logger": "^3.0.7",
    "@types/url-assembler": "^1.2.1",
    "antd": "3.11.6",
    "awesome-typescript-loader": "^5.2.1",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.0",
    "devtron": "^1.4.0",
    "dva": "2.5.0-beta.2",
    "electron": "^6.0.0",
    "electron-builder": "^21.2.0",
    "electron-debug": "^3.0.1",
    "electron-webpack": "^2.7.4",
    "electron-webpack-ts": "^3.2.0",
    "moment-locales-webpack-plugin": "^1.0.7",
    "prettier": "1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "redux-logger": "^3.0.6",
    "run-electron": "^1.0.0",
    "slash": "^3.0.0",
    "ts-loader": "^6.1.2",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "umi": "^2.9.0",
    "umi-plugin-react": "^1.8.0",
    "umi-types": "^0.3.0",
    "webpack": "4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/main"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
